<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-body">
                    <div class="row p-t-20">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.monetiqueDroit, 'monetiqueDroit', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.monetiqueDroit, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}})
                                }}
                                {{ form_errors(form.monetiqueDroit) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.monetiqueVariable, 'monetiqueVariable', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.monetiqueVariable, {'attr': {'class': 'form-control custom-select'}}) }}
                                {{ form_errors(form.monetiqueVariable) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.valeur, 'valeur', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.valeur, {'attr': {'class': 'form-control custom-select'}}) }}
                                {{ form_errors(form.valeur) }}
                            </div>valeur
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-check"></i>
                        Save
                    </button>
                    <a href="" type="button" class="btn btn-inverse">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
