{% extends 'base.html.twig' %}

{% block title %}FormTotaux index{% endblock %}

{% block content %}

    <div class="accordion" id="accordionTable">
        <div class="card m-b-5">
            <div aria-labelledby="heading1">
                <div class="card-body">
                    <a href="{{ path('app_form_totaux_new') }}" type="button" class="btn btn-info btn-rounded m-t-10 float-right text-white">Ajouter Formulaire</a>
                    <div class="table-responsive">
                        <table id="demo-foo-accordion" class="table table-bordered m-b-0 toggle-arrow-tiny"
                               data-filtering="true" data-paging="true" data-sorting="true">
                            <thead>
                            <tr class="footable-filtering">
                                <th>Id</th>
                                <th>Label</th>
                                <th>Unite</th>
                                <th>CreatedAt</th>
                                <th>UpdatedAt</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for form_totaux in form_totauxes %}
                            <tr>
                                <td>{{ form_totaux.id }}</td>
                                <td>{{ form_totaux.label }}</td>
                                <td>{{ form_totaux.unite }}</td>
                                <td>{{ form_totaux.createdAt ? form_totaux.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ form_totaux.updatedAt ? form_totaux.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_form_totaux_show', {'id': form_totaux.id}) }}">show</a>
                                    <a href="{{ path('app_form_totaux_edit', {'id': form_totaux.id}) }}">edit</a>
                                </td>
                            </tr>
                            <div class="modal fade" id="elementModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="exampleModalLabel1">formulaire</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                                        aria-hidden="true">&times;</span></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="card">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    Voulez vous supprimer cette formulaire
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                <a href="{{ path('app_form_totaux_delete', {'id': form_totaux.id}) }}" type="button" class="btn btn-red" id="elementActionButton">Supprimer</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                {% else %}
                                    <tr>
                                        <td colspan="7">no records found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
