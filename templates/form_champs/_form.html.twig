<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-body">
                    <div class="row p-t-20">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.label, 'label', {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.label, {'attr': {'class': 'form-control custom-select'}}) }}
                                {{ form_errors(form.label) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                {{ form_label(form.question, 'Question', {'label_attr': {'class':
                                    'control-label'}}) }}
                                {{ form_widget(form.question , {'attr': {'class': 'textarea_editor2 form-control', 'placeholder':
                                    'Description Debut'}}) }}
                                {{ form_errors(form.question) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class':
                                    'control-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'textarea_editor form-control', 'placeholder':
                                    'Description Debut'}}) }}
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.formToTaux, 'formToTaux', {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.formToTaux, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}})
                            }}
                            {{ form_errors(form.formToTaux) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_row(form.actif) }}
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-check"></i>
                        Save
                    </button>
                    <a href="" type="button" class="btn btn-inverse">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
